<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
 
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="31"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:layout_gravity="left"
            android:layout_row="0"
            android:text="Alta Producto"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textNombre"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="1"
            android:text="Nombre:" />

        <AutoCompleteTextView
            android:id="@+id/autoNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_gravity="bottom"
            android:layout_row="1"
            android:ems="10" >

            <requestFocus />
        </AutoCompleteTextView>

        <TextView
            android:id="@+id/textView2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:text="Imagen" />

        <ImageView
            android:id="@+id/imagenProducto"
            android:layout_width="81dp"
            android:layout_height="101dp"
            android:layout_column="2"
            android:layout_gravity="bottom"
            android:layout_row="4"
            android:src="@drawable/sinimagen" />

        <LinearLayout
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="5"
            android:orientation="vertical" >
        </LinearLayout>

        <GridLayout
            android:layout_width="124dp"
            android:layout_height="49dp"
            android:layout_column="2"
            android:layout_gravity="bottom"
            android:layout_row="5"
            android:columnCount="4" >

            <ImageButton
                android:id="@+id/buttonMemoria"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_row="0"
                android:src="@drawable/ic_menu_memoria" />

            <ImageButton
                android:id="@+id/buttonCamara"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_row="0"
                android:src="@drawable/ic_menu_camara" />

            <Space
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_column="0"
                android:layout_row="0" />

            <Space
                android:layout_width="28dp"
                android:layout_height="1dp"
                android:layout_column="1"
                android:layout_row="0" />
        </GridLayout>

        <CalendarView
            android:id="@+id/calendarioFechaCaducidad"
            android:layout_width="186dp"
            android:layout_height="174dp"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="6"
            android:layout_rowSpan="4" />

        <Button
            android:id="@+id/buttonAceptar"
            android:layout_column="3"
            android:layout_row="10"
            android:onClick="DoIt"
            android:text="Guardar" />

        <Space
            android:layout_width="21dp"
            android:layout_height="1dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0" />

        <Space
            android:layout_width="59dp"
            android:layout_height="1dp"
            android:layout_column="1"
            android:layout_row="0" />

        <Space
            android:layout_width="128dp"
            android:layout_height="1dp"
            android:layout_column="2"
            android:layout_row="0" />

        <Space
            android:layout_width="305dp"
            android:layout_height="1dp"
            android:layout_column="3"
            android:layout_row="0" />

        <Space
            android:layout_width="1dp"
            android:layout_height="82dp"
            android:layout_column="0"
            android:layout_row="4" />

        <Space
            android:layout_width="1dp"
            android:layout_height="61dp"
            android:layout_column="0"
            android:layout_row="5" />
    </GridLayout>
</RelativeLayout>